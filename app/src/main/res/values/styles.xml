<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>

    <style name="ExpandedToolbarTitleTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="AppTheme.LocalRecyclerViewStyle" parent="AppTheme">
        <item name="android:colorEdgeEffect">@color/colorPrimaryLocal</item>
    </style>

</resources>
